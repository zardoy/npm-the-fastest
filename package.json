{
    "name": "npm-the-fastest",
    "displayName": "NPM THE FASTEST",
    "publisher": "zardoy",
    "contributes": {
        "commands": [
            {
                "command": "install-packages",
                "title": "Install NPM Packages"
            },
            {
                "command": "install",
                "title": "Install workspace dependencies"
            },
            {
                "command": "pnpm-offline-install",
                "category": "PNPM",
                "title": "Offline Install NPM Packages"
            },
            {
                "command": "remove-packages",
                "title": "Remove NPM Packages"
            },
            {
                "command": "start-npm-script",
                "title": "Start NPM Script"
            },
            {
                "command": "start-main-npm-script",
                "title": "Start Main NPM Script"
            },
            {
                "command": "open-closest-package-json",
                "title": "Open Closest Package.json to Current Editor"
            },
            {
                "command": "open-workspace-package-json",
                "title": "Open Workspace Package.json"
            },
            {
                "command": "enforce-package-manager-use",
                "title": "Enforce Package Manager Use"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "install",
                    "when": "!virtualWorkspace"
                },
                {
                    "command": "pnpm-offline-install",
                    "when": "!virtualWorkspace"
                },
                {
                    "command": "start-npm-script",
                    "when": "!virtualWorkspace"
                },
                {
                    "command": "start-npm-script",
                    "when": "!virtualWorkspace"
                }
            ]
        },
        "configuration": {
            "properties": {
                "main-npm-script": {
                    "title": "Main NPM script to run",
                    "type": "array",
                    "default": [
                        "test",
                        "tees2"
                    ],
                    "uniqueItems": true,
                    "description": "Run first script from this list on Start Main NPM Script command"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dependencies-explorer",
                    "title": "Dependencies Explorer",
                    "icon": "all_inbox_black_24dp.svg"
                }
            ]
        },
        "views": {
            "dependencies-explorer": [
                {
                    "id": "nodeDependencies",
                    "name": "Node Dependencies"
                }
            ]
        }
    },
    "type": "commonjs",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": false,
            "description": "This extension needs to run arbitrary commands provided by package manager, installed on your system"
        },
        "virtualWorkspaces": {
            "supported": "limited",
            "description": "In virtual workspaces (or web), only basic commands and manipulation with package.json are supported."
        }
    },
    "activationEvents": [
        "*",
        "workspaceContains:package.json"
    ],
    "categories": [
        "Other"
    ],
    "keywords": [
        "npm",
        "yarn",
        "pnpm",
        "dependencies",
        "depcheck"
    ],
    "version": "0.0.1",
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "license": "MIT",
    "private": true,
    "preview": true,
    "scripts": {
        "start": "vscode-framework start --skip-launching"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/vscode": "^1.61.0",
        "@zardoy/tsconfig": "^1.2.2",
        "eslint-plugin-zardoy-config": "^0.1.0",
        "type-fest": "^2.3.4",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@hediet/node-reload": "^0.7.3",
        "@mui/icons-material": "^5.0.3",
        "@types/jsonfile": "^6.0.1",
        "@types/lodash": "^4.14.175",
        "@types/node": "^16.10.3",
        "depcheck": "^1.4.2",
        "esbuild": "^0.13.4",
        "eslint": "^7.32.0",
        "execa": "^5.1.1",
        "filesize": "^8.0.3",
        "find-up": "^6.2.0",
        "fs-extra": "^10.0.0",
        "globby": "^11",
        "got": "^11.8.2",
        "jsonfile": "^6.1.0",
        "lodash": "^4.17.21",
        "pkg-dir": "^5",
        "slash": "^3",
        "ts-node": "^10.2.1",
        "vscode-framework": "^0.0.7",
        "which-pm": "^2.0.0"
    }
}
